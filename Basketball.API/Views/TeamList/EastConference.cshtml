@model Basketball.Models.ConferenceDetails

@{
    ViewBag.Title = "EastConference";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="jumbotron">
        <h1 class="display-4">Git "R" Dun League!</h1>
        <hr class="my-4">
        <p>2020 SEASON</p>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("ALL TEAMS", "Index", null, new { @style = "color: white;" })</b>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("WEST CONFERENCE", "EastConference", new { id = 2 }, new { @style = "color: white;" })</b>
        <b class="btn btn-primary btn-lg" href="#" role="button">@Html.ActionLink("EAST CONFERENCE", "EastConference", new { id = 1 }, new { @style = "color: white;" })</b>
    </div>
    <h2>Teams</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teams.First().Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams.First().Record)
            </th>
        </tr>

        @foreach (var item in Model.Teams)
        {
            <tr>
                <td>
                    @Html.ActionLink(Html.DisplayFor(modelItem => item.Location).ToHtmlString(), "TeamDetails", "TeamList", new { id = item.Name }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Record)
                </td>
            </tr>
        }
    </table>
</body>
</html>
